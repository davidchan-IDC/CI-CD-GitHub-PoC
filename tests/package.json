{
  "name": "myapp-tests",
  "version": "1.0.0",
  "scripts": {
    "test:api": "jest api/ --testResultsProcessor=jest-junit",
    "test:smoke": "jest smoke/ --testResultsProcessor=jest-junit",
    "test:e2e": "playwright test",
    "test:load": "k6 run load/api-load-test.js",
    "test:load:ci": "k6 run --out json=load-test-results.json load/api-load-test.js",
    "test:all": "npm run test:api && npm run test:smoke && npm run test:e2e",
    "coverage:merge": "nyc merge coverage coverage/coverage-final.json",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=cobertura"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "axios": "^1.5.1",
    "nyc": "^15.1.0",
    "artillery": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
} 